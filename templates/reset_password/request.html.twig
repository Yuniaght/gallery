{% extends 'base.html.twig' %}

{% block title %}Demande de mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <section class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="card">
                    <div class="card-title text-center bg-warning text-dark">
                        <h1>Demande de reinitialisation de mot de passe</h1>
                    </div>
                    <div class="text-body p-3 text-center">
                        <div>
                            Entrez votre mail ci-dessous et nous vous enverrons un lien de reinitialisation de votre mot de passe.
                        </div>
                        <div class="text-center p-2">
                            {{ form_start(requestForm) }}
                            {{ form_row(requestForm.email) }}
                            <button class="btn btn-outline-success">Envoyer</button>
                            {{ form_end(requestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
