{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <section class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="card">
                    <div class="card-title text-center bg-success text-dark">
                        <h1>Demande envoyée</h1>
                    </div>
                    <div class="text-body p-3 text-center">
                        <p>
                            Vérifiez votre mail, si vous ne voyez rien, vérifier votre boite spam.
                            Ce lien expirera dans {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                        </p>
                        <p>
                            Vous ne voyez rien? <a href="{{ path('app_forgot_password_request') }}">Réessayez</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
