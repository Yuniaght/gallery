{% extends 'base.html.twig' %}

{% block title %}Mes Commentaires{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex align-items-center mb-4">
            <h1 class="display-6 me-3">Mes Commentaires</h1>
        </div>
        <div class="row">
            <div class="col-lg-12 mx-auto">
                {% for comment in comments %}
                    <div class="card mb-3 shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-3 col-xl-2">
                                <a href="{{ path('app_work', {'slug': comment.work.slug}) }}">
                                    <div class="ratio ratio-1x1 h-100">
                                        <img src="{{ asset('images/work/' ~ comment.work.image) }}"
                                             class="img-fluid rounded-start object-fit-cover"
                                             alt="{{ comment.work.title }}">
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-9 col-xl-10">
                                <div class="card-body h-100 d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h5 class="card-title mb-1">
                                                <a href="{{ path('app_work', {'slug': comment.work.slug}) }}" class="text-decoration-none">
                                                    {{ comment.work.title }}
                                                </a>
                                            </h5>
                                            <p class="card-text text-muted small">
                                                Posté le {{ comment.publishedAt|date('d/m/Y à H:i') }}
                                            </p>
                                        </div>
                                        <div class="text-warning text-nowrap">
                                            {% for i in 1..5 %}
                                                {% if i <= comment.note %}
                                                    <i class="icofont-star"></i>
                                                {% else %}
                                                    <i class="icofont-star text-muted opacity-25"></i>
                                                {% endif %}
                                            {% endfor %}
                                            <span class="fw-bold ms-1">{{ comment.note }}/5</span>
                                        </div>
                                    </div>
                                    <p class="card-text flex-grow-1 p-3 rounded fst-italic">
                                        "{{ comment.description }}"
                                    </p>

                                    <div class="mt-auto d-flex justify-content-end gap-2">
                                        {# Badge de statut (si tu gères la modération) #}
                                        {% if comment.isPublic %}
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success align-self-center me-auto">
                                            <i class="icofont-check-circled"></i> Publié
                                        </span>
                                        {% else %}
                                            <span class="badge bg-warning bg-opacity-10 text-warning border border-warning align-self-center me-auto">
                                            <i class="icofont-clock-time"></i> En attente de validation
                                        </span>
                                        {% endif %}

                                        <a href="{{ path('app_work', {'slug': comment.work.slug}) }}" class="btn btn-sm btn-outline-primary">
                                            Voir l'œuvre
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center py-5">
                        <i class="icofont-comment display-1 text-muted opacity-25"></i>
                        <h3 class="mt-3 text-muted">Vous n'avez pas encore posté de commentaires.</h3>
                        <a href="{{ path('app_gallery') }}" class="btn btn-primary mt-3">Explorer la galerie</a>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
