{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-dark">
                        <h5 class="mb-0"><i class="icofont-key"></i>Modification du mot de passe</h5>
                    </div>
                    <div class="card-body p-4">
                        <h2 class="h4 mb-4">Changer de mot de passe</h2>
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.currentPassword) }}
                            <div class="form-text text-muted">Pour des raisons de sécurité, veuillez confirmer votre mot de passe actuel.</div>
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.plainPassword.first) }}
                        </div>
                        <div class="mb-4">
                            {{ form_row(form.plainPassword.second) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_user_profile') }}" class="btn btn-outline-secondary">Annuler</a>
                            <button type="submit" class="btn btn-outline-success">Enregistrer le nouveau mot de passe</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
