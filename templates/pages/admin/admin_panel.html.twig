{% extends 'pages/admin/base.html.twig' %}

{% block title %}Gallery - Panel Administrateur{% endblock %}

{% block body %}
        <div class="container mt-5">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h1 class="display-6 fw-bold">Tableau de bord</h1>
                    <p class="text-muted">Bienvenue dans l'espace de gestion.</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_new_artist') }}" class="btn btn-primary shadow-sm">
                        <i class="icofont-ui-add"></i> Nouvel Artiste
                    </a>
                    <a href="{{ path('app_new_work') }}" class="btn btn-primary shadow-sm">
                        <i class="icofont-ui-add"></i> Nouvelle Œuvre
                    </a>
                    <a href="{{ path("app_new_category") }}" class="btn btn-primary shadow-sm">
                        <i class="icofont-ui-add"></i> Nouvelle Catégorie
                    </a>
                    <a href="{{ path('app_new_technic') }}" class="btn btn-primary shadow-sm">
                        <i class="icofont-ui-add"></i> Nouvelle Technique
                    </a>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-6 col-xl-3">
                    <div class="card bg-primary text-white h-100 shadow border-0 position-relative overflow-hidden">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-0 text-white-50 text-uppercase fw-bold small">Artistes</p>
                                    <h2 class="display-6 fw-bold mb-0">{{ stats.artists }}</h2>
                                </div>
                                <i class="icofont-paint fs-1 opacity-50"></i>
                            </div>
                        </div>
                        <a href="{{ path('app_artists_panel') }}" class="stretched-link"></a>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card bg-success text-white h-100 shadow border-0 position-relative overflow-hidden">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-0 text-white-50 text-uppercase fw-bold small">Œuvres</p>
                                    <h2 class="display-6 fw-bold mb-0">{{ stats.works }}</h2>
                                </div>
                                <i class="icofont-image fs-1 opacity-50"></i>
                            </div>
                        </div>
                        <a href="{{ path('app_works_panel') }}" class="stretched-link"></a>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card bg-warning text-dark h-100 shadow border-0 position-relative overflow-hidden">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-0 text-dark text-opacity-75 text-uppercase fw-bold small">Avis & Comm.</p>
                                    <div class="d-flex align-items-center">
                                        <h2 class="display-6 fw-bold mb-0">{{ stats.comments }}</h2>
                                        {% if stats.comments_pending > 0 %}
                                            <span class="badge bg-danger ms-2 shadow-sm animate__animated animate__pulse animate__infinite">
                                        {{ stats.comments_pending }} en attente
                                    </span>
                                        {% endif %}
                                    </div>
                                </div>
                                <i class="icofont-comment fs-1 opacity-50"></i>
                            </div>
                        </div>
                        <a href="{{ path('app_comments_panel') }}" class="stretched-link"></a>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card bg-info text-white h-100 shadow border-0 position-relative overflow-hidden">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-0 text-white-50 text-uppercase fw-bold small">Utilisateurs</p>
                                    <h2 class="display-6 fw-bold mb-0">{{ stats.users }}</h2>
                                </div>
                                <i class="icofont-users-alt-5 fs-1 opacity-50"></i>
                            </div>
                        </div>
                        <a href="{{ path('app_users_panel') }}" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
