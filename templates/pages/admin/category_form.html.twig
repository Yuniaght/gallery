{% extends 'pages/admin/base.html.twig' %}

{% block title %}Ajouter un catégorie{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <section class="row">
        <div class="col-md-6 offset-3 py-5">
            <h1>Ajouter une catégorie</h1>
            {{ form_errors(newCategoryForm) }}
            {{ form_start(newCategoryForm) }}
            {{ form_widget(newCategoryForm) }}
            <button type="submit" class="btn">Confirmer</button>
            {{ form_end(newCategoryForm) }}
        </div>
    </section>
{% endblock %}
